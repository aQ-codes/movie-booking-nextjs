"use client";

import React, { useState, useEffect } from "react";
import {
  InputOTP,
  InputOTPGroup,
  InputOTPSeparator,
  InputOTPSlot,
// } from "@/components/ui/input-otp"; 
// import { Input } from "@/components/ui/input"; 

type EmailOtpLoginProps = {
  onVerifyOtp: (otp: string) => void;
};

const EmailOtpLogin: React.FC<EmailOtpLoginProps> = ({ onVerifyOtp }) => {
  const [otp, setOtp] = useState(""); // OTP state
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    const hasEnteredAllDigits = otp.length === 6;
    if (hasEnteredAllDigits) {
      verifyOtp();
    }
  }, [otp]);

  const verifyOtp = () => {
    // Add your logic for verifying OTP (e.g., calling an API)
    if (otp === "123456") { // Placeholder for actual verification logic
      setError(null);
      onVerifyOtp(otp); // Notify parent of successful OTP entry
    } else {
      setError("Invalid OTP. Please try again.");
    }
  };

  return (
    <div className="flex flex-col justify-center items-center">
      <InputOTP maxLength={6} value={otp} onChange={(value) => setOtp(value)}>
        <InputOTPGroup>
          <InputOTPSlot index={0} />
          <InputOTPSlot index={1} />
          <InputOTPSlot index={2} />
        </InputOTPGroup>
        <InputOTPSeparator />
        <InputOTPGroup>
          <InputOTPSlot index={3} />
          <InputOTPSlot index={4} />
          <InputOTPSlot index={5} />
        </InputOTPGroup>
      </InputOTP>

      {error && <p className="text-red-500 mt-2">{error}</p>}
    </div>
  );
};

export default EmailOtpLogin;
